<%= form_for [:admin, @leave], html: {id: 'leave_form'} do |form| %>
 
  <% if @leave.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <ul>
        <% @leave.errors.full_messages.each do |msg| %>
          <li class="pb-0"><%= msg %></li>
        <% end %>
      </ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group col-md-6">
      <%= form.label :total_assigned_leaves %>
      <%= form.text_field :total_assigned_leaves, class: "form-control rounded-0" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :select_employee %>
      <%= form.select :employee_id, options_for_select(Employee.all.map {|employee| [employee.name, employee.id]}, selected: form.object.try(:employee)), { include_blank: "Select Employee" }, { class: "form-control form-control-line rounded-0", required: true } %>
    </div>    
  </div> 
  
  <div class="actions">
    <%= form.submit class: "btn btn-primary rounded-0" %>
    <%= link_to 'Back', admin_leaves_path, class: "btn btn-outline-primary rounded-0" %>
  </div>
 
<% end %>