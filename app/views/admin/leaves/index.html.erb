<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card rounded-0 mt-5 mb-5">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h1>Listing Leaves</h1>
            </div>
            <div class="col-md-6">
              <%= link_to 'New Leave', new_admin_leafe_path, class: "btn btn-primary rounded-0 float-right" %>
            </div>
          </div>
        </div>
      </div>
      <table class="table table-bordered">
        <tr>
          <th>Total Assigned Leaves</th>
          <th colspan="3">Actions</th>
        </tr>
       
        <% @leaves.each do |leave| %>
          <tr>
            <td><%= leave.total_assigned_leaves %></td>
            <td>
              <div class="dropdown">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Actions</button>
                <div class="dropdown-menu">         
                  <%= link_to 'Show', admin_leafe_path(leave), class: "dropdown-item" %>
                  <%= link_to 'Edit', edit_admin_leafe_path(leave), class: "dropdown-item" %>
                  <%= link_to 'Destroy', admin_leafe_path(leave), method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
                </div>
              </div>    
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>