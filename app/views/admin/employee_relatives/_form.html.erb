<%= form_for [:admin, @employee_relative], html: {id: 'employee_relative_form'} do |form| %>
 
  <% if @employee_relative.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@employee_relative.errors.count, "error") %> prohibited
        this employee_relative from being saved:
      </h2>
      <ul>
        <% @employee_relative.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control rounded-0" %>
  </div>
 
  <div class="form-group">
    <%= form.label :contact %>
    <%= form.text_field :contact, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :relation %>
    <%= form.text_field :relation, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :select_employee %>
    <%= form.select :employee_id, options_for_select(Employee.all.map {|employee| [employee.name, employee.id]}, selected: form.object.try(:employee)), { include_blank: "Select Employee" }, { class: "form-control form-control-line", required: true } %>
  </div>
 
  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Back', admin_employee_relatives_path, class: "btn btn-outline-primary" %>
  </div>
 
<% end %>