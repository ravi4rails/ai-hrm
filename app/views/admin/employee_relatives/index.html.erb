<div class="container">
  <!-- <div class="card mt-3">
    <div class="card-body">
      <%#= render 'admin/employee_relatives/index/filter' %>      
    </div>
  </div> -->
  <div class="row">
    <div class="col-md-12">
      <div class="card rounded-0 mt-5 mb-5">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h1>Listing Educational Relatives</h1>
            </div>
            <div class="col-md-6">
              <%= link_to 'New Educational Credentials', new_admin_employee_relative_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
      </div>
      <table class="table table-bordered">
        <tr>
          <th>Name</th>
          <th>Contact</th>
          <th>Address</th>
          <th>Relation</th>
          <th colspan="3">Actions</th>
        </tr>
       
        <% @employee_relatives.each do |employee_relative| %>
          <tr>
            <td><%= employee_relative.name %></td>
            <td><%= employee_relative.contact %></td>
            <td><%= employee_relative.address %></td>
            <td><%= employee_relative.relation %></td>
            <td>
              <%= link_to admin_employee_relative_path(employee_relative), class: "btn btn-info" do %>
                <i class="fas fa-eye"></i>
              <% end %>
            </td>
            <td>
              <%= link_to edit_admin_employee_relative_path(employee_relative), class: "btn btn-warning" do %>
                <i class="fas fa-edit"></i>
              <% end %>    
            </td>
            <td>
              <%= link_to admin_employee_relative_path(employee_relative), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>