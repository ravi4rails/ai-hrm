<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card rounded-0 mt-5 mb-5">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h1>Listing Departments</h1>
            </div>
            <div class="col-md-6">
              <%= link_to 'New department', new_admin_department_path, class: "btn btn-primary float-right" %>
            </div>
          </div>
        </div>
      </div>
      <table class="table table-bordered">
        <tr>
          <th>Name</th>
          <th>Established from</th>
          <th colspan="3">Actions</th>
        </tr>
       
        <% @departments.each do |department| %>
          <tr>
            <td><%= department.name %></td>
            <td><%= department.established_from %></td>
            <td>
              <%= link_to admin_department_path(department), class: "btn btn-info" do %>
                <i class="fas fa-eye"></i>
              <% end %>
            </td>
            <td>
              <%= link_to edit_admin_department_path(department), class: "btn btn-warning" do %>
                <i class="fas fa-edit"></i>
              <% end %>    
            </td>
            <td>
              <%= link_to admin_department_path(department), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>