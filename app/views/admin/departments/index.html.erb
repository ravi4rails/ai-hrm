<h1>Listing Departments</h1>
<%= link_to 'New department', new_admin_department_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Established_from</th>
    <th colspan="3"></th>
  </tr>
 
  <% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      <td><%= department.established_from %></td>
      <td><%= link_to 'Show', admin_department_path(department) %></td>
      <td><%= link_to 'Edit', edit_admin_department_path(department) %></td>
      <td><%= link_to 'Destroy', admin_department_path(department),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>