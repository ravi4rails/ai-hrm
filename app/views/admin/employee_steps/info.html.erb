<%= render 'partials/flash'%>
<%= form_for current_employee, url: :wizard, html: {id: 'employee_form'} do |form| %>
  <div class="row">    
    <div class="form-group col-md-6">
      <%= form.label :gender %>
      <%= form.text_field :gender, class: "form-control rounded-0" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :marital_status %>
      <%= form.text_field :marital_status, class: "form-control rounded-0" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <%= form.label :blood_group %>
      <%= form.text_field :blood_group, class: "form-control rounded-0" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :religion %>
      <%= form.text_field :religion, class: "form-control rounded-0" %>
    </div>    
  </div>     
  <div class="actions">
    <%= form.submit "Continue", class: 'btn btn-primary'%>
    <%= link_to "Previous", previous_wizard_path, class: "btn btn-secondary" %>
  </div>    
<% end %>