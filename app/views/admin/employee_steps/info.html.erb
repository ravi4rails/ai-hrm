<%= form_for current_employee, url: :wizard do |form| %>
  <div class="row">    
    <div class="form-group col-md-6">
      <%= form.label :gender %>
      <%= form.text_field :gender, class: "form-control rounded-0" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :marital_status %>
      <%= form.text_field :marital_status, class: "form-control rounded-0" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <%= form.label :blood_group %>
      <%= form.text_field :blood_group, class: "form-control rounded-0" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :religion %>
      <%= form.text_field :religion, class: "form-control rounded-0" %>
    </div>    

    <div class="actions">
      <%= form.submit "Continue" %>
    </div>
  </div> 
<% end %>