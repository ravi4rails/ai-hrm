<%= form_for current_employee, url: :wizard, html: {id: 'employee_form'} do |form| %>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5 class="card-heading">Info</h5>
          </div>
          <div class="card-body">
            <div class="row">    
              <div class="form-group col-md-6">
                 <%= form.label :gender %><br> 
                 <%= form.radio_button :gender, 'Male' %>
                 <%= form.label :gender_male, 'Male' %><br>
                 <%= form.radio_button :gender, 'Female' %>
                 <%= form.label :gender_female, 'Female' %>
              </div>
              <div class="form-group col-md-6">
                <%= form.label :marital_status %>
                <%= form.text_field :marital_status, class: "form-control rounded-0" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group col-md-6">
                <%= form.label :blood_group %>
                <%= form.text_field :blood_group, class: "form-control rounded-0" %>
              </div>
              <div class="form-group col-md-6">
                <%= form.label :religion %>
                <%= form.text_field :religion, class: "form-control rounded-0" %>
              </div>    
            </div>  

            <div class="actions">
              <%= link_to "Previous", previous_wizard_path, class: "btn btn-secondary" %>
              <%= form.submit "Continue", class: 'btn btn-primary'%>
            </div> 
          </div>
        </div>
      </div>
    </div>
  </div>     
<% end %>