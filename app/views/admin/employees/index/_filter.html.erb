<%= search_form_for @q, url: :admin_employees, method: :get do |f| %>
  <div class="row">
    <div class="form-group col-md-3">
      <%= f.label :first_name %>
      <%= f.search_field :first_name_cont, class: "form-control rounded-0" %>
    </div>

    <div class="form-group col-md-3">
      <%= f.label :last_name %>
      <%= f.search_field :last_name_cont, class: "form-control rounded-0" %>
    </div>    

    <div class="form-group col-md-3">
      <%= f.label :email %>
      <%= f.search_field :email_cont, class: "form-control rounded-0" %>     
    </div>

    <div class="form-group col-md-3">
      <%= f.label :employee_code %>
      <%= f.search_field :employee_code_cont, class: "form-control rounded-0" %>      
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-3">
      <%= f.label :city %>
      <%= f.search_field :city_cont, class: "form-control rounded-0" %>      
    </div>

    <div class="form-group col-md-3">
      <%= f.label :state %>
      <%= f.search_field :state_cont, class: "form-control rounded-0" %> 
    </div>

    <div class="form-group col-md-3">
      <%= f.label :country %>
      <%= f.search_field :country_cont, class: "form-control rounded-0" %>  
    </div>    

    <div class="form-group col-md-3">
      <%= f.label :job_title %>
      <%= f.search_field :job_title_cont, class: "form-control rounded-0" %>
    </div>    
  </div>
  
  <div class="actions">
    <%= submit_tag 'Search',  class: 'btn btn-primary rounded-0' %>
    <%= link_to 'Reset', admin_employees_path, class: 'btn btn-secondary rounded-0' %>
  </div>  
<% end %>
