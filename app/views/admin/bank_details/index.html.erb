<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card rounded-0 mt-5 mb-5">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h1>Bank Details</h1>
            </div>
            <div class="col-md-6">
              <%= link_to 'New Bank Detail', new_admin_bank_detail_path, class: "btn btn-primary float-right"%>
            </div>
          </div>
        </div>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Bank name</th>
            <th>Account number</th>
            <th>Branch</th>
            <th>Ifsc code</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @bank_details.each do |bank_detail| %>
            <tr>
              <td><%= bank_detail.bank_name %></td>
              <td><%= bank_detail.account_number %></td>
              <td><%= bank_detail.branch %></td>
              <td><%= bank_detail.ifsc_code %></td>
              <td>
                <div class="dropdown">
                  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Actions</button>
                  <div class="dropdown-menu">
                    <%= link_to 'Show', admin_bank_detail_path(bank_detail), class: "dropdown-item" %>
                    <%= link_to 'Edit', edit_admin_bank_detail_path(bank_detail), class: "dropdown-item" %>
                    <%= link_to 'Destroy', admin_bank_detail_path(bank_detail), method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
                  </div>
                </div>  
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>        
</div>
