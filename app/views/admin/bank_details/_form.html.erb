<%= form_for [:admin, @bank_detail], html: {id: 'bank_detail_form'} do |form| %>
  <% if @bank_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bank_detail.errors.count, "error") %> prohibited this bank_detail from being saved:</h2>

      <ul>
      <% @bank_detail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :bank_name %>
    <%= form.text_field :bank_name, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :account_number %>
    <%= form.text_field :account_number, class: "form-control rounded-0"  %>
  </div>

  <div class="form-group">
    <%= form.label :branch %>
    <%= form.text_field :branch, class: "form-control rounded-0"  %>
  </div>

  <div class="form-group">
    <%= form.label :ifsc_code %>
    <%= form.text_field :ifsc_code, class: "form-control rounded-0"  %>
  </div>

  <div class="form-group">
    <%= form.label :select_employee %>
    <%= form.select :employee_id, options_for_select(Employee.all.map {|employee| [employee.name, employee.id]}, selected: form.object.try(:employee)), { include_blank: "Select Employee" }, { class: "form-control form-control-line rounded-0", required: true } %>
  </div>
  
  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Back', admin_bank_details_path, class: "btn btn-outline-primary" %>
  </div>
<% end %>
